<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SeekBar
            android:layout_width="297dp"
            android:layout_height="0dp"
            android:id="@+id/volumeSeekBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/systemVolume"/>
    <TextView
            android:text="Volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/systemVolume"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="59dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
